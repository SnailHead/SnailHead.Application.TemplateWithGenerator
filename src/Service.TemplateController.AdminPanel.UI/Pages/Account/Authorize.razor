@page "/auth"
<MudGrid Class="d-flex flex-column align-items-center">
    <MudItem sm="12" md="6" xs="12" >
        <MudPaper Class="ma-16 pa-4">
            <MudText Align="Align.Center">Авторизация</MudText>
            <MudForm Model="@_model" @ref="@_form" ValidationDelay="0">
                <MudGrid>
                    <MudItem xs="12" sm="12" md="12">
                        <MudTextField @bind-Value="_model.Login" For="@(() => _model.Login)" Label="Логин" Immediate="true"/>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="12">
                        <MudTextField @bind-Value="_model.Password" For="@(() => _model.Password)" Label="Пароль" Immediate="true" InputType="InputType.Password"/>
                    </MudItem>
                    <MudItem xs="12" sm="12" md="12" Class="d-flex justify-center flex-grow-1 gap-4">
                        <MyButton Class="ml-auto" OnClickHandler="Submit">Войти</MyButton>
                    </MudItem>
                </MudGrid>
            </MudForm>
        </MudPaper>
    </MudItem>
</MudGrid>
